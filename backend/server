// backend/server
require('dotenv').config();

const express = require('express');
const app = express();

// auth middleware (protect bookings)
const auth = require('./src/middleware/auth');

// ðŸ‘‰ Mount Stripe webhook BEFORE JSON parsers (needs raw body)
const stripeWebhookRouter = require('./stripeWebhook');
app.use('/stripe/webhook', stripeWebhookRouter);

// Normal parsers for everything else
app.use(express.json());
app.use(express.urlencoded({ extended: true }));

// Public routes
app.use('/', require('./search nearby groomers')); // GET /groomers, /groomers/:id/slots
app.get('/', (req, res) => res.json({ ok: true }));

// Protected routes (require Bearer JWT)
app.use('/bookings', auth, require('./create booking and paymentIntent')); // POST /
app.use('/bookings', auth, require('./groomer accept(capture payment)'));  // PATCH /:id/status

const port = process.env.PORT || 4000;
app.listen(port, () => console.log(`API listening on :${port}`));

